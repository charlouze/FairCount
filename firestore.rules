rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth.uid != null;
    }

    function isMember(account) {
      return request.auth.token.email in account.data.members;
    }

    match /accounts/{account} {
      allow read, update: if signedIn() && isMember(resource);

      allow create: if signedIn();

      allow delete: if false;

      match /transactions/{transaction} {
        allow read, write: if signedIn() && isMember(get(/databases/$(database)/documents/accounts/$(account)));
      }
    }
  }
}
